<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="theknife.ui.javafx.RegisterController">
    <center>
        <VBox spacing="10" alignment="TOP_LEFT">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <Label text="Registrazione utente" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Label text="Nome"/>
            <TextField fx:id="firstNameField" promptText="Nome"/>

            <Label text="Cognome"/>
            <TextField fx:id="lastNameField" promptText="Cognome"/>

            <Label text="Username *"/>
            <TextField fx:id="usernameField" promptText="Username"/>

            <Label text="Password *"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>

            <Label text="CittÃ  / domicilio"/>
            <TextField fx:id="cityField" promptText="Es. Varese"/>

            <Label text="Ruolo"/>
            <HBox spacing="10">
                <RadioButton fx:id="clientRadio" text="Cliente" selected="true"/>
                <RadioButton fx:id="restaurantRadio" text="Ristoratore"/>
            </HBox>

            <Label fx:id="errorLabel" textFill="red"/>

            <HBox spacing="10">
                <Button text="Crea account" onAction="#onCreate"/>
                <Button text="Annulla" onAction="#onBack"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>