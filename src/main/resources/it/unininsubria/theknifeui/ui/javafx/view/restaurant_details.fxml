<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="theknife.ui.javafx.RestaurantDetailsController"
      stylesheets="@style.css"
      styleClass="details-root"
      spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <HBox spacing="10" styleClass="details-header">
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label fx:id="etichettaNome" styleClass="restaurant-name"/>
            <HBox spacing="4">
                <Label text="ðŸ“" styleClass="details-line"/>
                <Label fx:id="etichettaIndirizzo" styleClass="details-line"/>
            </HBox>
            <HBox spacing="4">
                <Label text="ðŸ™ï¸" styleClass="details-line"/>
                <Label fx:id="etichettaCitta" styleClass="details-line"/>
            </HBox>
        </VBox>
        <Button fx:id="bottonePreferiti"
                text="Aggiungi ai preferiti"
                onAction="#onAggiungiAiPreferiti"
                styleClass="details-fav-btn"/>
    </HBox>

    <GridPane hgap="12" vgap="6" styleClass="details-info-panel">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <children>
            <Label text="ðŸ’° Prezzo medio:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="details-label"/>
            <Label fx:id="valorePrezzo" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="details-value"/>

            <Label text="ðŸ½ï¸ Cucina:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="details-label"/>
            <Label fx:id="valoreCucina" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="details-value"/>

            <Label text="ðŸšš Consegna:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="details-label"/>
            <Label fx:id="valoreConsegna" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="details-value"/>

            <Label text="ðŸ“… Prenotazione:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="details-label"/>
            <Label fx:id="valorePrenotazione" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="details-value"/>

            <Label text="ðŸŒ Sito web:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="details-label"/>
            <Hyperlink fx:id="linkSitoWeb" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="details-link"/>
        </children>
    </GridPane>

    <Label text="Mappa o Sito web" styleClass="details-section-title"/>

    <WebView fx:id="vistaMappa"
             prefWidth="680.0"
             prefHeight="450.0"
             minHeight="280.0">
        <styleClass>
            <String fx:value="details-map"/>
        </styleClass>
    </WebView>

    <HBox spacing="10">
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Chiudi" onAction="#onChiudi"/>
    </HBox>
</VBox>