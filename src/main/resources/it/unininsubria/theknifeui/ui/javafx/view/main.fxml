<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="theknife.ui.javafx.MainController"
            stylesheets="@style.css"
            styleClass="app-root">

    <!-- BARRA IN ALTO -->
    <top>
        <VBox alignment="CENTER" spacing="5" styleClass="top-bar">
            <ImageView fx:id="appLogo"
                       fitHeight="150"
                       preserveRatio="true"
                       smooth="true"
                       cache="true">
                <image>
                    <Image url="@../img/logo_theknife.png"/>
                </image>
            </ImageView>
            <HBox spacing="10" alignment="CENTER">
                <HBox alignment="CENTER_LEFT">
                    <Label text="ðŸ´ TheKnife" styleClass="logo-label"/>
                </HBox>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="etichettaRuolo"/>
                <Button fx:id="bottoneLogin" text="Accedi" onAction="#onShowLogin"/>
                <Button fx:id="bottoneRegistrati" text="Registrati" onAction="#onShowRegister"/>
                <Button fx:id="bottonePreferiti"
                        text="I miei preferiti"
                        visible="false"
                        managed="false"
                        onAction="#onShowFavorites"/>
                <Button fx:id="bottoneMieRecensioni"
                        text="Le mie recensioni"
                        visible="false"
                        managed="false"
                        onAction="#onShowMyReviews"/>
                <Button fx:id="bottoneLogout" text="Logout" onAction="#onLogout" visible="false"/>
            </HBox>
        </VBox>
    </top>

    <!-- CONTENUTO CENTRALE -->
    <center>
        <BorderPane styleClass="content-pane">
            <top>
                <Label text="Ristoranti" styleClass="section-title"/>
            </top>
            <center>
                <VBox spacing="10" style="-fx-padding: 10;">
                    <!-- BARRA FILTRI -->
                    <HBox spacing="10">
                        <TextField fx:id="campoRicerca" promptText="Cerca per nome o cittÃ ..." />
                        <ComboBox fx:id="filtroCucina" promptText="Cucina" />
                        <CheckBox fx:id="filtroConsegna" text="Delivery" />
                        <CheckBox fx:id="filtroPrenotazione" text="Prenotazione" />
                        <Button text="Filtra" onAction="#onApplyFilters"/>
                        <Button text="Reset" onAction="#onResetFilters"/>
                        <Button text="Filtro avanzato" onAction="#onShowAdvancedFilter"/>
                    </HBox>

                    <!-- LISTA RISTORANTI -->
                    <ListView fx:id="listaRistoranti"
                              styleClass="restaurant-list"
                              VBox.vgrow="ALWAYS"/>
                </VBox>
            </center>
        </BorderPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="10" styleClass="footer-bar">
            <children>
                <Label text="TheKnife â€” lista ristoranti" styleClass="footer-text"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="bottoneAggiungiRecensione" text="Aggiungi recensione" onAction="#onAddReview" styleClass="footer-button"/>
                <Button fx:id="bottoneAggiungiRistorante" text="Aggiungi ristorante" onAction="#onAddRestaurant" styleClass="footer-button"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>